<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hugo.ai.mapper.DataTestMapper">

    <resultMap id="BaseResultMap" type="hugo.ai.entity.DataTest">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name
    </sql>

    <select id="findById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM data_test
        WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM data_test
    </select>

    <insert id="insert" parameterType="hugo.ai.entity.DataTest">
        INSERT INTO data_test (id, name)
        VALUES (#{id}, #{name})
    </insert>

    <update id="update" parameterType="hugo.ai.entity.DataTest">
        UPDATE data_test
        <set>
            <if test="name != null">name = #{name},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM data_test WHERE id = #{id}
    </delete>

</mapper>
